<?xml version="1.0" encoding="utf-8"?>
<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>net472;netstandard2.0;netstandard2.1;netcoreapp3.0</TargetFrameworks>

    <Description>
      Provides the ability to configure configuration-based Options with Autofac-based dependency injection.

      An Autofac-specific alternative to `Microsoft.Extensions.Options.ConfigurationExtensions`.
    </Description>
    <PackageTags>autofac;di;ioc;dependencyinjection;configuration;options</PackageTags>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Autofac" Version="[4.9.1, 5.1.0)" />
  </ItemGroup>

  <ItemGroup Condition="$(TargetFramework) == 'net472' ">
    <PackageReference Include="Microsoft.Extensions.Configuration.Abstractions" Version="[2.2.0, 3.0.0)" />
    <PackageReference Include="Microsoft.Extensions.Configuration.Binder" Version="[2.2.0, 3.0.0)" />
    <PackageReference Include="Microsoft.Extensions.Configuration" Version="[2.2.0, 3.0.0)" />
    <PackageReference Include="Microsoft.Extensions.DependencyInjection.Abstractions" Version="[2.2.0, 3.0.0)" />
    <PackageReference Include="Microsoft.Extensions.Options.ConfigurationExtensions" Version="[2.2.0, 3.0.0)" />
    <PackageReference Include="Microsoft.Extensions.Options" Version="[2.2.0, 3.0.0)" />
  </ItemGroup>

  <ItemGroup Condition="$(TargetFramework) == 'netstandard2.0' ">
    <PackageReference Include="Microsoft.Extensions.Configuration.Abstractions" Version="[2.2.0, 3.0.0)" />
    <PackageReference Include="Microsoft.Extensions.Configuration.Binder" Version="[2.2.0, 3.0.0)" />
    <PackageReference Include="Microsoft.Extensions.Configuration" Version="[2.2.0, 3.0.0)" />
    <PackageReference Include="Microsoft.Extensions.DependencyInjection.Abstractions" Version="[2.2.0, 3.0.0)" />
    <PackageReference Include="Microsoft.Extensions.Options.ConfigurationExtensions" Version="[2.2.0, 3.0.0)" />
    <PackageReference Include="Microsoft.Extensions.Options" Version="[2.2.0, 3.0.0)" />
  </ItemGroup>

  <ItemGroup Condition="$(TargetFramework) == 'netstandard2.1' ">
    <PackageReference Include="Microsoft.Extensions.Configuration.Abstractions" Version="[3.0.0, 4.0.0)" />
    <PackageReference Include="Microsoft.Extensions.Configuration.Binder" Version="[3.0.0, 4.0.0)" />
    <PackageReference Include="Microsoft.Extensions.Configuration" Version="[3.0.0, 4.0.0)" />
    <PackageReference Include="Microsoft.Extensions.DependencyInjection.Abstractions" Version="[3.0.0, 4.0.0)" />
    <PackageReference Include="Microsoft.Extensions.Options.ConfigurationExtensions" Version="[3.0.0, 4.0.0)" />
    <PackageReference Include="Microsoft.Extensions.Options" Version="[3.0.0, 4.0.0)" />
  </ItemGroup>

  <ItemGroup Condition="$(TargetFramework) == 'netcoreapp3.0' ">
    <PackageReference Include="Microsoft.Extensions.Configuration.Abstractions" Version="[3.0.0, 4.0.0)" />
    <PackageReference Include="Microsoft.Extensions.Configuration.Binder" Version="[3.0.0, 4.0.0)" />
    <PackageReference Include="Microsoft.Extensions.Configuration" Version="[3.0.0, 4.0.0)" />
    <PackageReference Include="Microsoft.Extensions.DependencyInjection.Abstractions" Version="[3.0.0, 4.0.0)" />
    <PackageReference Include="Microsoft.Extensions.Options.ConfigurationExtensions" Version="[3.0.0, 4.0.0)" />
    <PackageReference Include="Microsoft.Extensions.Options" Version="[3.0.0, 4.0.0)" />
  </ItemGroup>

</Project>
